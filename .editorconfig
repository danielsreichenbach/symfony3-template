; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.sh]
indent_style = tab
indent_size = 4

[*.{php,js}]
indent_style = space
indent_size = 4

[*.{sass,scss}]
indent_style = space
indent_size = 4

[*.{json,yml,xml}]
indent_style = space
indent_size = 4

[*.{twig,xlf}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
